<Header@MDBoxLayout>:
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: 1, .3
        padding:'10dp'
        Image:
            source: 'icons/logoUZ.png'
            size: self.texture_size
            pos_hint: {"center_y": 0.5}
            padding: "10dp"

        MDLabel:
            text: '[color=#1976D2][b][size=45]Curve Trazer[/size][/b][/color]'
            markup: True
            halign: 'center'

<Principal_Screen@MDScreen>:
    Header:

        MDBoxLayout:
            orientation: 'horizontal'

            MDNavigationRail:

                MDNavigationRailItem:  
                    text: "OFF"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('OFF')
                        
                MDNavigationRailItem:
                    text: "DIODE"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('DIODE')
                        
                MDNavigationRailItem:
                    text: "MOSFET N"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('MN')

                MDNavigationRailItem:
                    text: "MOSFET P"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('MP')

                MDNavigationRailItem:
                    text: "BJT N"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('BN')

                MDNavigationRailItem:
                    text: "BJT P"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('BP')

                MDNavigationRailItem: 
                    text: "JFET N"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('JN')

                MDNavigationRailItem:  
                    text: "JFET P"
                    md_bg_color: "lightsteelblue"
                    on_release:
                        app.button_callback('JP')

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 0.8, 1
                padding: '20dp'

                MDBoxLayout:
                    id: graph_box
                    orientation: 'vertical'
                    size_hint: 1, 1  
                    padding: '20dp'
                
                MDGridLayout:
                    cols: 6
                    size_hint: 1, 0.1
                    pos_hint: {"center_x": 0.5}
                    spacing: "10dp"
                    MDLabel:
                        text: "Average Voltage: "
                        halign: 'right'
                        bold: True
                    MDLabel:
                        id: label_2
                        halign: 'left'
                    MDLabel:
                        text: "Average Current: "
                        halign: 'right'
                        bold: True
                    MDLabel:
                        id: label_4
                        halign: 'left'
                    MDLabel:
                        text: "Î²: "
                        halign: 'right'
                        bold: True
                    MDLabel:
                        id: label_6
                        halign: 'left'

<UI>:
    id: screen_manager
    Principal_Screen:
        name: 'principal_screen'
